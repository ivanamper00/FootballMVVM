                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtAwayTeam"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:autoLink="all"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@color/colorLighGray"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_below="@+id/imgSchedules"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtEventName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtSeason"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtHomeTeam"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtAwayTeam"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@color/colorLighGray"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:autoLink="all"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </io.supercharge.shimmerlayout.ShimmerLayout>
</androidx.core.widget.NestedScrollView>